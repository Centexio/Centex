#!/bin/bash
#
#  cntxcoind The cntxcoin server.
#
#
# chkconfig: 345 80 20
# description: cntxcoind
# processname: cntxcoind
#

# Source function library.
. /etc/init.d/functions

# you can override defaults in /etc/sysconfig/cntxcoind, see below
if [ -f /etc/sysconfig/cntxcoind ]; then
        . /etc/sysconfig/cntxcoind
fi

RETVAL=0

prog=cntxcoind
# you can override the lockfile via BITCOIND_LOCKFILE in /etc/sysconfig/cntxcoind
lockfile=${BITCOIND_LOCKFILE-/var/lock/subsys/cntxcoind}

# cntxcoind defaults to /usr/bin/cntxcoind, override with BITCOIND_BIN
bitcoind=${BITCOIND_BIN-/usr/bin/cntxcoind}

# cntxcoind opts default to -disablewallet, override with BITCOIND_OPTS
bitcoind_opts=${BITCOIND_OPTS}

start() {
    echo -n $"Starting $prog: "
    daemon $DAEMONOPTS $bitcoind $bitcoind_opts
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && touch $lockfile
    return $RETVAL
}

stop() {
    echo -n $"Stopping $prog: "
    killproc $prog
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && rm -f $lockfile
    return $RETVAL
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status $prog
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: service $prog {start|stop|status|restart}"
        exit 1
        ;;
esac
